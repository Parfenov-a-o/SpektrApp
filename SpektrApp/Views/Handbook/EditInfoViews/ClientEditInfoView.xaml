<Window x:Class="SpektrApp.Views.Handbook.EditInfoViews.ClientEditInfoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpektrApp.Views.Handbook.EditInfoViews"
        mc:Ignorable="d"
        Title="ClientEditInfoView" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Название организации:"></TextBlock>
            <TextBox Text="{Binding Client.Name}"></TextBox>
            <Button x:Name="OkButton" Content="Ок" Click="OkButton_Click" ></Button>
        </StackPanel>
    </Grid>
</Window>
